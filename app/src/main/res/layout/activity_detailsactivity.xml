<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/imvColor"
        android:transitionName="transColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/divCenter"
        android:scaleType="fitCenter"
        android:background="@color/colorPrimary"/>

    <TextView
        style="@style/Text.Primary"
        android:id="@+id/lblNameHeader"
        android:transitionName="transName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dark Vador"
        android:layout_above="@id/divCenter"/>
    
    <View
        android:id="@+id/divCenter"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerVertical="true"/>

    <TextView
        style="@style/Text.Secondary"
        android:id="@+id/lblBiographyBody"
        android:transitionName="transBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divCenter"
        android:text="Lorem ipsum actae set dominus regis."/>

</RelativeLayout>